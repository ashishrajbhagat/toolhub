{
  "name": "MyToolKitPro",
  "version": "1.0.0",
  "description": "MyToolKitPro is a set of free, fast, and secure online tools to convert PDFs and images directly in your browser. No installation, no sign-up, and no watermark.",
  "main": "index.js",
  "scripts": {
    "build:css": "tailwind.exe -i assets/css/tailwind.css -o assets/css/main.css --minify",
    "build:js": "node scripts/minify-js.js",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "tailwind.exe -i assets/css/tailwind.css -o assets/css/main.css --watch",
    "watch:js": "nodemon --watch assets/js/src --ext js --exec \"npm run build:js\"",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "postcss": "^8.5.6",
    "terser": "^5.46.0"
  }
}